{
    "name": "bunkerdb/core-api-rest",
    "description": "Core for quickly start working on a new Slim Framework 4 application. This application uses the latest Slim 4 with Slim PSR-7 implementation and PHP-DI container implementation.",
    "type": "library",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/BunkerDB/core-api-rest"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "cratia/pipeline": ">=0.7",
        "php-di/php-di": "^6.0",
        "psr/container": "^1.0",
        "psr/log": "^1.1",
        "slim/slim": "^4.4",
        "slim/psr7": "^1.0",
        "doctrine/event-manager": "^1.1",
        "cratia/orm-model": ">=0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "monolog/monolog": "^2.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Carlos Ratia",
            "email": "cratia.github@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "classmap": [
            "src/"
        ],
        "psr-4": {
            "Cratia\\Rest\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "src/"
        ],
        "psr-4": {
            "Tests\\Cratia\\Rest\\": "tests/"
        }
    }
}
