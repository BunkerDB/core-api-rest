{
    "name": "cratia/core-api-rest",
    "description": "Core for quickly start working on a new Slim Framework 4 application. This application uses the latest Slim 4 with Slim PSR-7 implementation and PHP-DI container implementation.",
    "type": "library",
    "require": {
        "psr/container": "^1.0",
        "psr/log": "^1.1",
        "slim/slim": "^4.4",
        "cratia/pipeline": "^0.7.0",
        "ext-json": "*",
        "php": ">=7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Carlos Ratia",
            "email": "carlos.ratia@bunkerdb.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "classmap": [
            "src/"
        ],
        "psr-4": {
            "Cratia\\Rest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
